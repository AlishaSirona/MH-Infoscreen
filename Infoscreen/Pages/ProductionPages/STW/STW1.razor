<div class="headline">Stahlwerk</div>

<div class="row">
    <div class="col-12 centric sub-headline">
        Stundenleistung [t/h]
    </div>
    <div class="col-4 centric">
        <div class="gauge-header">
            24h
        </div>
        <RadzenRadialGauge Style="height: 23vh">
            <RadzenRadialGaugeScale StartAngle="-110" EndAngle="110" Min="0" Max="28" TickPosition="GaugeTickPosition.None" >
                <RadzenRadialGaugeScalePointer Value="16.6" Length=".8" Width="6" Radius="10" ShowValue="true">
                    <Template Context="pointer">
                        <h1 class="pointer-value">
                            @pointer.Value.ToString("0.00")
                        </h1>
                    </Template>
                </RadzenRadialGaugeScalePointer>
                <RadzenRadialGaugeScaleRange From="0" To="7.5" Fill="green" Height="15"/>
                <RadzenRadialGaugeScaleRange From="7.5" To="10" Fill="orange" Height="15" />
                <RadzenRadialGaugeScaleRange From="10" To="28" Fill="red" Height="15" />
            </RadzenRadialGaugeScale>
        </RadzenRadialGauge>
    </div>
